use restaurante;
Calcule a quantidade de pedidos
  select count(*) as 'quantidade de pedidos' from pedidos;
--Calcule a quantidade de clientes únicos que realizaram pedidos
  select count(distinct id_cliente) as 'quantidade de clientes' from pedidos;
--Calcule a média de preço dos produtos
  select avg(preco) as 'mÃ©dia de preÃ§o' from produtos;
--Calcule o mínimo e máximo do preço dos produtos
  select min(preco) as 'menor preÃ§o', max(preco) as 'maior preÃ§o' from produtos;
--Selecione o nome e o preço do produto e faça um rank dos 5 produtos mais caros
  select distinct nome, preco , row_number () over(order by preco desc) as 'rank preÃ§o' from produtos limit 5;
--Selecione a média dos preços dos produtos agrupados por categoria
  select categoria, round(avg(preco),2) as 'mÃ©dia preÃ§o' from produtos group by categoria;
--Selecionar o fornecedor e a quantidade de produtos que vieram daquele fornecedor da informações de produtos
  select fornecedor, count(id_produto) as 'quantidade de produtos' from info_produtos group by fornecedor;
--Selecionar os fornecedores que possuem mais de um produto cadastrado
  select fornecedor,  count(id_produto) as 'quantidade de produtos' from info_produtos group by fornecedor having count(id_produto) > 1 ;
--Selecionar os clientes que realizaram apenas 1 pedido
  select id_cliente, count(id_cliente) as 'quantidade de pedidos' from pedidos group by id_cliente having count(id_cliente) = 1;
